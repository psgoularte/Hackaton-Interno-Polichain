generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Raffle {
  id            Int      @id @default(autoincrement())
  wallet        String   @db.VarChar(64)
  address       String   @db.VarChar(64)
  title         String   @db.VarChar(255)
  category      String   @db.VarChar(16)
  content       String?  @db.Text
  createdAt     DateTime @default(now()) @db.Timestamptz(6)
  coverImageUrl String   @db.VarChar(512)
  coverImageId  String   @db.VarChar(512)
  ticketPrize   Int      // Preço de cada ticket (em wei)
  prizeValue    Int      // Valor total do prêmio (em wei)
  duration      Int      // Duração do sorteio (em segundos)
  maxTickets    Int      // Número máximo de tickets que podem ser vendidos

  @@map("Raffle")
}